{
  "name": "party-planner",
  "version": "0.1.0",
  "description": "Point tickets. Plan your sprint. Have fun ðŸŽ‰!",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "is-ci || husky install",
    "format": "npx prettier --write --list-different",
    "format:all": "npx prettier --write --list-different .",
    "format:check": "npx prettier . --check",
    "commitizen:init": "sh ./scripts/commitizen_init.sh",
    "commit": "cz",
    "git-hooks:add-commit-msg": "sh ./scripts/git-hooks/add_commit-msg_hook.sh",
    "git-hooks:add-pre-push": "sh ./scripts/git-hooks/add_pre-push_hook.sh",
    "git-hooks:add-prepare-commit-msg": "sh ./scripts/git-hooks/add_prepare-commit-msg_hook.sh",
    "type-check": "tsc --noEmit",
    "workflow": "act -n --container-architecture linux/amd64"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.23.5",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-tooltip": "^1.0.6",
    "autoprefixer": "10.4.15",
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.3.2",
    "encoding": "^0.1.13",
    "firebase": "^10.3.1",
    "firebase-admin": "^11.10.1",
    "framer-motion": "^10.16.2",
    "jotai": "^2.4.2",
    "next": "13.4.19",
    "polished": "^4.2.2",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@mdx-js/loader": "^2.3.0",
    "@next/mdx": "^13.5.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.1",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/web": "^0.0.114",
    "@vanilla-extract/css": "^1.13.0",
    "@vanilla-extract/next-plugin": "^2.3.1",
    "bun-types": "^1.0.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.48.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.3",
    "tailwindcss-radix": "^2.8.0",
    "typescript": "5.2.2"
  },
  "prettier": {
    "plugins": ["prettier-plugin-tailwindcss"],
    "tailwindFunctions": "tw",
    "printWidth": 80,
    "jsxSingleQuote": false,
    "singleQuote": true,
    "singleAttributePerLine": false,
    "tabWidth": 2,
    "semi": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "next",
      "prettier"
    ],
    "plugins": [
      "import",
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "off",
      "no-shadow": "off",
      "no-undef": "off",
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx --no -- commitlint --edit '$1'",
      "pre-push": "bun wiptest",
      "prepare-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "prettier --write --list-different",
      "eslint --fix"
    ],
    "*.(md|mdx)": [
      "prettier --write --list-different"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
