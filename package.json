{
  "name": "@mrlemoos/party-planner",
  "version": "0.1.0",
  "author": "Leonardo Lemos <leo.lemos.ds@icloud.com>",
  "engines": {
    "node": ">=18.6.1",
    "vscode": "^1.22.0"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "postinstall": "prisma generate",
    "prebuild": "pnpm run firebase:write-credentials && pnpm run prisma:generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:generate": "prisma generate",
    "script": "ts-node --compiler-options '{\"module\":\"CommonJS\"}'",
    "firebase:write-credentials": "bun ./scripts/firebase/write-credentials.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.27.5",
    "@prisma/client": "5.6.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@vercel/edge-config": "^0.4.1",
    "autoprefixer": "10.4.16",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^16.3.1",
    "eslint-config-next": "14.0.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^11.11.1",
    "framer-motion": "^10.16.15",
    "next": "14.0.0",
    "next-themes": "^0.2.1",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "18.2.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "3.3.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.5",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "bun-types": "^1.0.20",
    "commitizen": "^4.3.0",
    "eslint": "8.52.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.0",
    "semantic-release": "^22.0.10",
    "tailwindcss-radix": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2",
    "vitest": "^0.34.6"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "jsxSingleQuote": true,
    "singleQuote": true,
    "singleAttributePerLine": false,
    "printWidth": 120,
    "semi": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "next/core-web-vitals",
      "prettier",
      "plugin:import/recommended"
    ],
    "overrides": [
      {
        "env": {
          "node": true,
          "browser": true
        },
        "files": [
          ".eslintrc.{js,cjs}"
        ],
        "parserOptions": {
          "sourceType": "script"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier",
      "import"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "prettier/prettier": "error",
      "import/named": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
